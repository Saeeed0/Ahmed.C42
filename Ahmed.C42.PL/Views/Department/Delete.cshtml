@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<!-- Navigation bar -->
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" href="#" id="general-tab" onclick="showSection('general')">General</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" id="admin-tab" onclick="showSection('administration')">Administration</a>
    </li>
</ul>

<!-- General Section (default visible) -->
<div id="general" class="section">
    <br />
    <h3>General</h3>
    <ul class="list-unstyled">
        <li>
            <div class="form-group mb-3">
                <label asp-for="Code" class="col-form-label"></label>
                <input asp-for="Code" class="form-control" readonly>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" readonly>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="Description" class="col-form-label"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="CreationDateTime" class="col-form-label"></label>
                <input type="date" asp-for="CreationDateTime" class="form-control" readonly>
            </div>
        </li>
    </ul>
</div>

<!-- Administration Section (initially hidden) -->
<div id="administration" class="section" style="display:none;">
    <br />
    <h3>Administration</h3>
    <ul class="list-unstyled">
        <li>
            <div class="form-group mb-3">
                <label asp-for="CreatedBy" class="col-form-label"></label>
                <input asp-for="CreatedBy" class="form-control" readonly>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="CreatedOn" class="col-form-label"></label>
                <input type="date" asp-for="CreatedOn" class="form-control" readonly>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="LastModifiedBy" class="col-form-label"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly>
            </div>
        </li>
        <li>
            <div class="form-group mb-3">
                <label asp-for="LastModifiedOn" class="col-form-label"></label>
                <input type="date" asp-for="LastModifiedOn" class="form-control" readonly>
            </div>
        </li>
    </ul>
</div>

<!-- Actions -->
<form asp-action="Delete">
    <input type="submit" asp-route-id="@Model.Id" class="btn btn-danger">Delete</input> |
    <a asp-action="Index" class="btn btn-light">Cansle</a>
</form>

<!-- JavaScript to handle toggling between sections -->
<script>
    function showSection(section) {
        // Hide both sections first
        document.getElementById('general').style.display = 'none';
        document.getElementById('administration').style.display = 'none';

        // Remove active class from both tabs
        document.getElementById('general-tab').classList.remove('active');
        document.getElementById('admin-tab').classList.remove('active');

        // Show the selected section and set the corresponding tab as active
        if (section === 'general') {
            document.getElementById('general').style.display = 'block';
            document.getElementById('general-tab').classList.add('active');
        } else if (section === 'administration') {
            document.getElementById('administration').style.display = 'block';
            document.getElementById('admin-tab').classList.add('active');
        }
    }

    // Default to showing the General section on page load
    document.addEventListener("DOMContentLoaded", function () {
        showSection('general');
    });
</script>

